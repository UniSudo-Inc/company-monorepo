---
import Layout from '@/layouts/PageLayout.astro';
import Hero from '@/components/widgets/Hero.astro';
import Features from '@/components/widgets/Features.astro';
import Features2 from '@/components/widgets/Features2.astro';
import Content from '@/components/widgets/Content.astro';

const metadata = {
  title: '上海智独数科技有限公司 — 赋能SUDO权限的独特AI解决方案',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: '联系我们',
        href: '/contact',
        target: '_blank',
      },
      { text: '公司简介', href: '#features' },
    ]}
    image={{ src: '@/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot='title'>
      赋能SUDO权限的
      <span class='highlight text-accent dark:text-white'>独特AI解决方案</span>
    </Fragment>

    <Fragment slot='subtitle'>
      <span class='hidden sm:inline'> <span class='font-semibold'>上海智独数科技有限公司</span></span>
      <span class='mb-1 block font-bold text-blue-600 sm:hidden'>上海智独数科技有限公司</span>
      致力于打造高效能、低成本的AI解决方案，以研发能力作为市场核心竞争力。通过创新的模型架构和全流程技术支持，我们帮助企业以远低于传统方案的成本实现AI的精准落地。
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    id='features'
    tagline='核心竞争力'
    title='业内专家 + 创新思维 + 新技术研发能力'
    subtitle='上海智独数科技将持续深化技术创新，专注于为企业提供更高效、更经济的AI落地方案。我们期待与更多行业领先企业合作，共同推动AI技术在各垂直领域的深度应用。'
    items={[
      {
        title: '技术创新',
        description: '突破传统架构限制，实现低成本、高效能的AI解决方案。',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: '场景理解',
        description: '深度理解垂直领域需求，提供精准的行业解决方案。',
        icon: 'tabler:components',
      },
      {
        title: '成本优势',
        description: '通过创新技术架构大幅降低部署和运营成本。',
        icon: 'tabler:list-check',
      },
      {
        title: '生态完整',
        description: '自主研发全流程技术链，提供一站式服务能力。',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline='产品体系'
    title='满足您对AI的全部需求'
    items={[
      {
        title: '业界领先的实时交互能力',
        description: '支持多轮对话、上下文理解、意图识别、知识库问答等复杂交互场景。',
      },
      {
        title: '智能化的对话路径重构',
        description: '通过智能路径重构，实现更高效、更智能的对话体验。',
      },
      {
        title: '支持多场景知识库实时问答',
        description: '支持多种场景下的知识库实时问答，满足不同业务需求。',
      },
      {
        title: '丝滑的用户交互体验',
        description: '为用户提供流畅、自然的对话体验。',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot='content'>
      <h3 class='mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl'>流式可打断对话系统</h3>
      <p>为您的业务提供更智能、更流畅的对话体验。</p>
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: '支持本地化低成本部署',
        description: '支持部署在私有化服务器上，节约费用的同时保障数据安全。',
      },
      {
        title: '灵活对接各类模型',
        description: '可对接多种模型，满足不同业务需求。',
      },
      {
        title: '支持私有模型训练与优化',
        description: '支持私有模型训练与优化，定制专属模型。',
      },
      {
        title: '适配商用及工业场景',
        description: '适配商用及工业场景，满足专业需求。',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot='content'>
      <h3 class='mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl'>智能硬件解决方案</h3>
      <p>我们提供多种智能硬件解决方案，满足您的业务需求。</p>
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: '完整的商用级部署能力',
        description: '支持云端部署，提供完整的商用级部署能力。',
      },
      {
        title: '强大的Function Call功能支持',
        description: '支持Function Call，实现更智能、更灵活的对话体验。',
      },
      {
        title: '灵活的本地部署方案',
        description: '支持私有化部署，满足数据安全需求。',
      },
      {
        title: '开放的API生态系统',
        description: '支持API对接，扩展性强。',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot='content'>
      <h3 class='mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl'>云原生工作流平台</h3>
      <p>为您的企业自动化提供全流程支持，让您专注于核心业务。</p>
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: '服务多家知名车企',
        description: '服务多家知名车企，提供专业的数据标注解决方案。',
      },
      {
        title: '支持自动驾驶数据处理',
        description: '支持自动驾驶数据处理，为智能驾驶提供专业的数据标注解决方案。',
      },
      {
        title: '低空飞行场景数据标注',
        description: '支持低空飞行场景数据标注，为无人机提供专业的数据标注解决方案。',
      },
      {
        title: '多模态数据处理能力',
        description: '支持多种模态数据处理，',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot='content'>
      <h3 class='mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl'>专业数据标注平台</h3>
      <p>我们提供专业的数据标注解决方案，满足您的业务需求。</p>
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: '低代码开发环境',
      },
      {
        title: '智能化数据处理',
      },
      {
        title: '可视化分析工具',
      },
      {
        title: '深度洞察能力',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot='content'>
      <h3 class='mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl'>AI数据分析平台</h3>
      Gain a competitive advantage by incorporating industry leading practices
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    title='Most used widgets'
    subtitle='Provides frequently used components for building websites using Tailwind CSS'
    tagline='应用场景'
    items={[
      {
        title: '智能制造',
        description:
          '<ul><li>工业现场数字员工部署</li><li>设备预测性维护</li><li>生产线质量控制</li><li>工业知识库管理</li></ul>',
        icon: 'flat-color-icons:template',
      },
      {
        title: '智能交通',
        description:
          '<ul><li>自动驾驶数据处理</li><li>低空飞行控制系统</li><li>交通流量分析</li><li>智能调度系统</li></ul>',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: '智能客服',
        description:
          '<ul><li>金融服务智能问答</li><li>电商客服自动化</li><li>政务服务智能助手</li><li>企业知识库问答系统</li></ul>',
        icon: 'flat-color-icons:approval',
      },
      {
        title: '企业服务',
        description:
          '<ul><li>人力资源智能助手</li><li>企业培训系统</li><li>办公自动化解决方案</li><li>数据分析决策支持</li></ul>',
        icon: 'flat-color-icons:document',
      },
    ]}
  >
    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

