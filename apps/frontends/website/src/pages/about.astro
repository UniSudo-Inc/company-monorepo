---
import Features2 from '@/components/widgets/Features2.astro';
import Features3 from '@/components/widgets/Features3.astro';
import Hero from '@/components/widgets/Hero.astro';
import Stats from '@/components/widgets/Stats.astro';
import Steps2 from '@/components/widgets/Steps2.astro';
import Layout from '@/layouts/PageLayout.astro';

const metadata = {
  title: '关于我们',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline='关于我们'
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: '公司形象',
    }}
  >
    <Fragment slot='title'>
      <span class='text-4xl md:text-6xl'>上海智独数科技有限公司</span><br />
      <span class='highlight text-3xl text-accent dark:text-white md:text-5xl'>一站式AI解决方案服务商</span>
    </Fragment>

    <Fragment slot='subtitle'>
      <span class='text-xl md:text-2xl'>
        上海智独数科技有限公司是一家专业的一站式AI服务提供商。我们提供从数据标注、模型训练部署、生产环境搭建、定制开发交互，到低成本语音交互的全流程解决方案。凭借我们的专业技术和丰富经验，我们帮助企业以最优成本实现AI转型，打造符合企业需求的智能化系统。
      </span>
    </Fragment>
  </Hero>

  <Stats
    title='公司数据'
    stats={[
      { title: '技术专利', amount: '3+' },
      { title: '技术团队', amount: '15+' },
      { title: '服务项目', amount: '30+' },
      { title: '合作伙伴', amount: '15+' },
    ]}
  >
    <Fragment slot='bg'>
      <div class='mt-6 flex flex-wrap justify-center space-x-8'>
        <img src='/placeholder-logo1.png' alt='合作伙伴logo' class='h-12 grayscale transition-all hover:grayscale-0' />
        <img src='/placeholder-logo2.png' alt='合作伙伴logo' class='h-12 grayscale transition-all hover:grayscale-0' />
        <img src='/placeholder-logo3.png' alt='合作伙伴logo' class='h-12 grayscale transition-all hover:grayscale-0' />
        <img src='/placeholder-logo4.png' alt='合作伙伴logo' class='h-12 grayscale transition-all hover:grayscale-0' />
        <img src='/placeholder-logo5.png' alt='合作伙伴logo' class='h-12 grayscale transition-all hover:grayscale-0' />
      </div>
    </Fragment>
  </Stats>

  <Features3
    title='核心技术'
    subtitle='提供全方位的AI解决方案，助力企业数字化转型'
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: '专业的数据标注服务',
        description: '提供高质量、高效率的数据标注服务，为AI模型训练提供坚实基础。',
        icon: 'tabler:template',
      },
      {
        title: '全流程模型开发部署',
        description: '从模型选型、训练到部署的一站式服务，确保AI系统的稳定运行。',
        icon: 'tabler:template',
      },
      {
        title: '低成本语音交互方案',
        description: '创新的语音交互技术，帮助企业大幅降低AI应用成本。',
        icon: 'tabler:template',
      },
    ]}
  />

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: '生产环境定制化',
        description: '根据企业需求定制开发生产环境，确保AI系统的最佳性能表现。',
        icon: 'tabler:template',
      },
      {
        title: '交互系统开发',
        description: '专业的交互系统开发团队，打造流畅自然的人机交互体验。',
        icon: 'tabler:template',
      },
      {
        title: '一体化技术支持',
        description: '提供全周期的技术支持服务，保障系统的持续优化与升级。',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: '技术展示',
    }}
  />

  <Steps2
    title='企业价值观'
    subtitle='专业、创新、务实、高效'
    items={[
      {
        title: '技术创新',
        description: '持续投入研发，追求技术创新，为客户提供最先进的AI解决方案。',
      },
      {
        title: '客户至上',
        description: '深入理解客户需求，提供定制化服务，确保项目的落地效果。',
      },
      {
        title: '专业服务',
        description: '专业的技术团队，全流程的服务支持，确保客户获得最佳服务体验。',
      },
    ]}
  />

  <Steps2
    title='发展成就'
    subtitle='用专业技术服务创造价值'
    isReversed={true}
    callToAction={{
      text: '回到主页',
      href: '/',
    }}
    items={[
      {
        title: '技术创新',
        description: '自主研发多项核心技术，持续推动行业创新发展。',
        icon: 'tabler:globe',
      },
      {
        title: '客户认可',
        description: '获得众多知名企业的信赖与认可，建立长期合作关系。',
        icon: 'tabler:message-star',
      },
      {
        title: '服务能力',
        description: '完善的服务体系，确保为客户提供最优质的解决方案。',
        icon: 'tabler:award',
      },
    ]}
  />

  <Features2
    title='联系我们'
    tagline='办公地点'
    columns={1}
    items={[
      {
        title: '上海总部',
        description: '上海市浦东新区临港自贸区水芸路55号港城广场二街坊1号楼8层802室',
      },
    ]}
  />

  <Features2
    title='技术支持'
    tagline='联系方式'
    columns={2}
    items={[
      {
        title: '在线咨询',
        description: '我们的技术支持团队随时为您提供专业的咨询服务和技术支持。',
        icon: 'tabler:messages',
      },
      {
        title: '电话咨询',
        description: '工作时间：周一至周五 9:00-18:00，欢迎来电咨询。',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
