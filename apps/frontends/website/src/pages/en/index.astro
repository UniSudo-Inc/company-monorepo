      {
        title: 'Flexible Model Integration',
        description: 'Can integrate multiple models to meet different business needs.',
      },
      {
        title: 'Support Private Model Training and Optimization',
        description: 'Support private model training and optimization, customize exclusive models.',
      },
      {
        title: 'Adapt to Commercial and Industrial Scenarios',
        description: 'Adapt to commercial and industrial scenarios to meet professional needs.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot='content'>
