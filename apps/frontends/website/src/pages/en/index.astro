---
import Layout from '@/layouts/PageLayout.astro';
import Hero from '@/components/widgets/Hero.astro';
import Features from '@/components/widgets/Features.astro';
import Features2 from '@/components/widgets/Features2.astro';
import Content from '@/components/widgets/Content.astro';
import { getPermalink } from '@/utils/permalinks';
import videoUrl from '@/assets/videos/a1.mp4';

const metadata = {
  title: 'UniSudo Inc. â€” Unique AI Solutions for SUDO Permissions',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: getPermalink('/en/contact'),
      },
      { text: 'Company Introduction', href: getPermalink('/en/about') },
    ]}
  >
    <Fragment slot='video'>
      <video
        src={videoUrl}
        autoplay
        muted
        loop
        playsinline
        style={{ borderRadius: '20px', width: '900px', height: 'auto' }}
      />
    </Fragment>

    <Fragment slot='title'>
      Unique AI Solutions for
      <span class='highlight text-accent dark:text-white'>SUDO Permissions</span>
    </Fragment>

    <Fragment slot='subtitle'>
      <span class='hidden sm:inline'> <span class='font-semibold'>UniSudo Inc.</span></span>
      <span class='mb-1 block font-bold text-blue-600 sm:hidden'>UniSudo Inc.</span>
      We are dedicated to creating high-performance, low-cost AI solutions, with research and development as our core competitive
      advantage. Through innovative model architectures and full-process technical support, we help enterprises implement
      AI accurately at a cost far lower than traditional solutions.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    id='features'
    tagline='Core Competitiveness'
    title='Industry Experts + Innovative Thinking + New Technology Development'
    subtitle='UniSudo Inc. will continue to deepen technological innovation, focusing on providing more efficient and cost-effective AI deployment solutions for enterprises. We look forward to partnering with more leading enterprises in various vertical industries to jointly promote the deep application of AI technology.'
    items={[
      {
        title: 'Innovative Technology',
        description:
          'Break through the limitations of traditional architectures to achieve low-cost, high-performance AI solutions.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Scene Understanding',
        description: 'Deeply understand the needs of vertical industries to provide accurate industry solutions.',
        icon: 'tabler:components',
      },
      {
        title: 'Cost Advantage',
        description:
          'Significantly reduce deployment and operational costs through innovative technology architectures.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Complete Ecosystem',
        description: 'Develop an end-to-end technology chain independently to provide one-stop service capabilities.',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline='Product System'
    title='Meet All Your AI Needs'
    items={[
      {
        title: 'Industry-leading Real-time Interaction Capabilities',
        description:
          'Support multi-turn conversations, context understanding, intent recognition, knowledge base question answering, and other complex interactive scenarios.',
      },
      {
        title: 'Intelligent Dialogue Path Reconstruction',
        description:
          'Through intelligent path reconstruction, achieve more efficient and intelligent dialogue experiences.',
      },
      {
        title: 'Support Real-time Knowledge Base Question Answering in Multiple Scenarios',
        description:
          'Support real-time knowledge base question answering in multiple scenarios to meet different business needs.',
      },
      {
        title: 'Smooth User Interaction Experience',
        description: 'Provide a smooth and natural dialogue experience for users.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot='content'>
      <h3 class='mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl'>
        Streaming Interruptable Dialogue System
      </h3>
      <p>Provide more intelligent and smooth dialogue experiences for your business.</p>
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Support Localized Low-cost Deployment',
        description: 'Support deployment on private servers to save costs while ensuring data security.',
