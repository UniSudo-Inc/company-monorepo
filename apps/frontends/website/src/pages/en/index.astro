    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Service Multiple Well-known Automobile Companies',
        description:
          'Service multiple well-known automobile companies, provide professional data annotation solutions.',
      },
      {
        title: 'Support Autonomous Driving Data Processing',
        description:
          'Support autonomous driving data processing, provide professional data annotation solutions for intelligent driving.',
