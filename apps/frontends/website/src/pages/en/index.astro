    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Complete Commercial Deployment Capability',
        description: 'Support cloud deployment to provide complete commercial deployment capabilities.',
      },
      {
        title: 'Strong Function Call Support',
        description: 'Support Function Call to achieve more intelligent and flexible dialogue experiences.',
      },
      {
        title: 'Flexible Local Deployment Solutions',
        description: 'Support private deployment to meet data security needs.',
