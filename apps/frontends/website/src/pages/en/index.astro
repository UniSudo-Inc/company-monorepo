    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    title='AI Application Scenarios'
    subtitle='AI empowers multiple fields such as intelligent manufacturing, intelligent transportation, intelligent customer service, and enterprise services.'
    tagline=''
    items={[
      {
        title: 'Digital Human Exhibition',
        description:
          '<ul><li>Bank Intelligent Net Digital Employee</li><li>Museum Virtual Guide</li><li>Enterprise Exhibition Interactive Guide</li><li>Shopping Mall Digital Guide Assistant</li><li>Educational Training Digital Lecturer</li><li>Enterprise Image Digital Spokesperson</li></ul>',
